<form bindsubmit="formSubmit">

    <picker
      range="{{ countries }}"
      bindchange="inputHandler"
      name="picker"
      mode="time"
      start="09:00"
      end='17:00'
    >
      <view>
        <text>{{ pick }}</text>
      </view>
    </picker>

    <checkbox-group name="checkbox" bindchange="inputHandler">
        <label wx:for="{{ items }}" wx:key="key">
            <text>{{ item.name }}</text>
            <checkbox value="{{ item.value }}" />
        </label>
    </checkbox-group>

    <radio-group name="radio" bindchange="inputHandler">
        <label wx:for="{{ items }}" wx:key="key">
            <text>{{ item.name }}</text>
            <radio value="{{ item.value }}" />
        </label>
    </radio-group>

    <input
        type="text"
        name="text"
        placeholder="text"
        bindinput="inputHandler"
    />

    <textarea
        name="textarea"
        placeholder="textarea"
        bindinput="inputHandler"
    />

    <label for="slider">
        <text>slider</text>
    </label>
    <slider id="slider" name="slider" show-value />

